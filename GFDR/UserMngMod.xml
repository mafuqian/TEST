<!--  用于直接生成SQL语句，支持同步和异步提交 -->
<!--  title:标题
	navigate:导航信息
	type:方式（sql|call)
	interface:是否显示输入条件页面(true|false)
	databusid:数据总线编号
	transdataactionurl:数据整理URL
	async:异步提交标志
	pagesize:页面显示记录数(缺省为10)
-->
<CommQry title="操作员修改" navigate="主页 &gt; 系统管理 &gt; 操作员修改" type="call"
	interface="true"  async="true" databusid="MANAGEMENTTLR"
	transdataactionurl="/trans/TransDataAction.do"
	getterclassname="com.gingkoo.gpms.platform.orgmgt.action.UserMngEntryQueryAction">
	<Include id="BankParam" />
	<Fields>
		<!-- status :F-基本信息中显示 N-不显示 D-详细信息中显示 A-基本、详细信息中都显示  -->
		<!-- primary : true-作为表单项记录上传　false-不作为表单项上传 -->
		<Field id="dataId" desc="数据ID" status="N" require="false" primary="true" type="String" xpath="/dataId" />
		<Field id="tlrno" desc="操作员号" status="N" require="true" primary="true" type="String" size="20" xpath="/tlrno" edittyep="text"/>
		<Field id="tlrName" desc="操作员名称" status="N" require="true" primary="true" type="String" size="30" xpath="/tlrName" />
		<Field id="email" desc="EMAIL" status="N"  require="false"  primary="true" type="String" size="100"
			   xpath="/email" default="" />
		
		<Field id="brcode" desc="所属机构" status="N" require="true" multiple="false" translated="CQ:BranchTree" placeholder="占位符"
		    fieldmap="brcode=id;brcodeName=name" viewField="name" edittype="select" dropdowntype="dynamictree"
            primary="true" init="false" size="20" default="2" xpath="/brcode" />
		<Field id="brcodeName" desc="操作机构" status="N" method="com.gingkoo.gpms.platform.util.CQMethod.getBrhNameByBrno"
			 primary="true" type="String" size="20" default="" xpath="/brcode" /> 
		<Field id="groupId" desc="所属部门" status="N" require="false" edittype="select" datatype="string" primary="true" readonly="false" type="String" size="30" xpath="/groupId" tip="所属部门" fieldmap="groupId=depart" viewField="depart,depart_name" multiple="false" translated="CQ:EastDPTSelect"/>

		<Field id="branchRel" desc="操作机构" status="F" require="false" edittype="select" datatype="string" primary="true"
			   readonly="false" type="BRANCH_REL" size="4000" multiple="true"
			   xpath="/branchRel" translated="CQ:BranchTreeSelect"
			   placeholder="占位符" fieldmap="branchRel=orgId" viewField="brname"
			   dropdowntype="dynamictree" init="true"/>

		<Field id="status" desc="状态" status="N" translated="DATA_DIC.37" edittype="select" primary="true" type="String" size="20" xpath="/status" default="" />
	</Fields>

	<Parameters>
		<Parameter id="_TABLE_NAME" name="GP_BM_TLR_INFO" />
		<Parameter id="tlrno" name="TLRNO" require="true"/>
		<Parameter id="brcode" name="BRCODE" require="false"/>
	</Parameters>

	<Where>
	</Where>

	<Operations>
	    <Button id="btCancel" name="btCancel" desc="返回" operation="asysubmit" url="#" txn="" />
	</Operations>
	<Sql></Sql>
</CommQry>
